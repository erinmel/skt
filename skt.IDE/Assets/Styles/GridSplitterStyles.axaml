<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- GridSplitter styling: keep large hit area (Width/Height controlled where used) but render a thin visual line in the center -->
    <Style Selector="GridSplitter">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <!-- Hit area uses the GridSplitter's full bounds (keeps easy dragging) -->
                        <Border Background="Transparent"/>
                        <!-- Thin visual line centered -->
                        <Border Background="{DynamicResource AppSplitterLineBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Stretch"
                                Width="{DynamicResource SplitterVisualLineThickness}"/>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="GridSplitter[ResizeDirection=Rows]">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Border Background="Transparent"/>
                        <Border Background="{DynamicResource AppSplitterLineBrush}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Height="{DynamicResource SplitterVisualLineThickness}"/>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

</Styles>
