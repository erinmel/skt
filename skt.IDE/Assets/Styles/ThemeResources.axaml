<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:aval="clr-namespace:Avalonia.Layout;assembly=Avalonia">

  <!-- Font tokens -->
  <FontFamily x:Key="AppFontFamily">Segoe UI, Arial, sans-serif</FontFamily>
  <x:Double x:Key="AppFontSize">14</x:Double>
  <x:Double x:Key="AppFontSizeSmall">12.6</x:Double>
  <x:Double x:Key="AppLineHeight">17.5</x:Double>

  <FontFamily x:Key="EditorFontFamily">Consolas, monospace</FontFamily>
  <x:Double x:Key="EditorFontSize">14</x:Double>
  <x:Double x:Key="EditorFontSizeSmall">12.6</x:Double>
  <x:Double x:Key="EditorLineHeight">19.6</x:Double>

  <!-- Icon scale default used by controls that size icons from AppFontSize -->
  <x:Double x:Key="IconDefaultScale">1</x:Double>

  <!-- Expose min/max defaults for settings UI -->
  <x:Double x:Key="AppFontSizeMin">10</x:Double>
  <x:Double x:Key="AppFontSizeMax">22</x:Double>
  <x:Double x:Key="EditorFontSizeMin">8</x:Double>
  <x:Double x:Key="EditorFontSizeMax">28</x:Double>

  <!-- Layout tokens derived from font sizes (design-time defaults) -->
  <GridLength x:Key="ToolbarHeight">48</GridLength>
  <x:Double x:Key="ToolbarHeightValue">48</x:Double>
  <GridLength x:Key="TabHeaderHeight">30</GridLength>
  <x:Double x:Key="TabItemHeight">35</x:Double>
  <x:Double x:Key="TabMinWidth">120</x:Double>
  <x:Double x:Key="TabMaxWidth">200</x:Double>
  <GridLength x:Key="ToolStripWidth">45</GridLength>
  <x:Double x:Key="ToolStripWidthValue">45</x:Double>
  <x:Double x:Key="SplitterThickness">12</x:Double>
  <GridLength x:Key="StatusBarHeight">25</GridLength>

  <x:Double x:Key="WindowDefaultWidth">1200</x:Double>
  <x:Double x:Key="WindowDefaultHeight">800</x:Double>
  <x:Double x:Key="DialogDefaultWidth">420</x:Double>
  <x:Double x:Key="DialogDefaultHeight">200</x:Double>

  <!-- Spacing and padding tokens (responsive to font size) -->
  <Thickness x:Key="ButtonPadding">10,5</Thickness>
  <Thickness x:Key="ButtonPaddingCompact">6,4</Thickness>
  <Thickness x:Key="ControlPadding">8,4</Thickness>
  <Thickness x:Key="ControlPaddingSmall">4,2</Thickness>
  <x:Double x:Key="IconSizeToolbar">20</x:Double>
  <x:Double x:Key="IconSizeMenu">16</x:Double>
  <x:Double x:Key="IconSizeLogo">30</x:Double>
  <x:Double x:Key="SplitterVisualLineThickness">2</x:Double>

  <!-- System brush aliases (prefer system brushes, fall back to sensible defaults) -->
  <StaticResource x:Key="AppBackgroundBrush" ResourceKey="SystemControlPageBackgroundChromeLowBrush" />
  <StaticResource x:Key="AppChromeBrush" ResourceKey="SystemControlBackgroundChromeMediumBrush" />

  <!-- Foreground brushes - using SolidColorBrush so they can be updated dynamically by ThemeManager -->
  <SolidColorBrush x:Key="AppForegroundHighBrush" Color="White" />
  <SolidColorBrush x:Key="AppForegroundLowBrush" Color="LightGray" />

  <StaticResource x:Key="ControlHoverBrush" ResourceKey="SystemControlBackgroundBaseMediumLowBrush" />
  <StaticResource x:Key="ListAltBrush" ResourceKey="SystemControlBackgroundListLowBrush" />

  <!-- Splitter visual line brush -->
  <StaticResource x:Key="AppSplitterLineBrush" ResourceKey="SystemControlForegroundBaseLowBrush" />

  <!-- Close button hover: default to red but can be overridden at runtime to a system brush -->
  <SolidColorBrush x:Key="AppCloseButtonHoverBrush" Color="#E81123" />

</ResourceDictionary>
