<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Font tokens -->
  <FontFamily x:Key="AppFontFamily">Segoe UI, Arial, sans-serif</FontFamily>
  <x:Double x:Key="AppFontSize">12</x:Double>

  <FontFamily x:Key="EditorFontFamily">Consolas, monospace</FontFamily>
  <x:Double x:Key="EditorFontSize">12</x:Double>

  <!-- System brush aliases (prefer system brushes, fall back to sensible defaults) -->
  <StaticResource x:Key="AppBackgroundBrush" ResourceKey="SystemControlPageBackgroundChromeLowBrush" />
  <StaticResource x:Key="AppChromeBrush" ResourceKey="SystemControlBackgroundChromeMediumBrush" />
  <StaticResource x:Key="AppForegroundHighBrush" ResourceKey="SystemControlForegroundBaseHighBrush" />
  <StaticResource x:Key="AppForegroundLowBrush" ResourceKey="SystemControlForegroundBaseLowBrush" />
  <StaticResource x:Key="ControlHoverBrush" ResourceKey="SystemControlBackgroundBaseMediumLowBrush" />
  <StaticResource x:Key="ListAltBrush" ResourceKey="SystemControlBackgroundListLowBrush" />

  <!-- Splitter visual line brush -->
  <StaticResource x:Key="AppSplitterLineBrush" ResourceKey="SystemControlForegroundBaseLowBrush" />

  <!-- Close button hover: default to red but can be overridden at runtime to a system brush -->
  <SolidColorBrush x:Key="AppCloseButtonHoverBrush" Color="#E81123" />

</ResourceDictionary>
