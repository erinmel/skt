<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="TreeDataGrid.skt-standard TreeDataGridRow">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
    </Style>

    <Style Selector="TreeDataGrid.skt-standard TreeDataGridRow:nth-child(even)">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
    </Style>

    <Style Selector="TreeDataGrid.skt-standard TreeDataGridRow:pointerover /template/ Border#BackgroundBorder">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}"/>
    </Style>

    <Style Selector="TreeDataGrid.skt-standard TreeDataGridCell">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
        <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
    </Style>

    <!-- TreeDataGrid column headers responsive to font size -->
    <Style Selector="TreeDataGrid.skt-standard TreeDataGridColumnHeader">
        <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="{DynamicResource ControlPaddingSmall}"/>
    </Style>

    <!-- TreeDataGrid rows responsive to font size -->
    <Style Selector="TreeDataGrid.skt-standard TreeDataGridRow">
        <Setter Property="MinHeight" Value="{DynamicResource AppLineHeight}"/>
    </Style>

</Styles>
