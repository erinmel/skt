<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="skt.IDE.Views.ToolWindows.StatusBar">

    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Padding="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0,0,0">
                <TextBlock Name="StatusTextBlock" Text="Ready" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,8,0" Spacing="10">
                <TextBlock Name="LineColumCountTextBlock" Text="" VerticalAlignment="Center"/>
                <TextBlock Name="EncodingTextBlock" Text="Encoding: UTF-8" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
