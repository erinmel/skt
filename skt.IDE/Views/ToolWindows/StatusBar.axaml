<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:skt.IDE.ViewModels"
             x:Class="skt.IDE.Views.ToolWindows.StatusBar"
             x:DataType="vm:MainWindowViewModel">

    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Padding="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0,0,0">
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,8,0">
                <TextBlock Text="{Binding CurrentLine, StringFormat='Line: {0}'}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding CurrentColumn, StringFormat='Col: {0}'}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding FileEncoding, StringFormat='Encoding: {0}'}" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
