<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:skt.IDE.ViewModels"
             xmlns:shell="using:skt.IDE.Views.Shell"
             xmlns:compilerOutput="using:skt.IDE.Views.ToolWindows.CompilerOutput"
             x:Class="skt.IDE.Views.ToolWindows.Terminal.TerminalPanel"
             x:DataType="vm:MainWindowViewModel"
             ClipToBounds="True">
  <UserControl.Styles>
    <Style Selector="TabControl#TerminalTabView">
      <Setter Property="Padding" Value="0"/>
      <Setter Property="VerticalAlignment" Value="Stretch"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    <Style Selector="TabControl#TerminalTabView > ContentPresenter">
      <Setter Property="ClipToBounds" Value="True"/>
      <Setter Property="VerticalAlignment" Value="Stretch"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    <Style Selector="TabItem">
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="ClipToBounds" Value="True"/>
    </Style>
    <Style Selector="ScrollViewer">
      <Setter Property="Padding" Value="0"/>
      <Setter Property="ClipToBounds" Value="True"/>
    </Style>
    <Style Selector="ScrollViewer#TerminalScrollViewer">
      <Setter Property="ClipToBounds" Value="True"/>
      <Setter Property="VerticalAlignment" Value="Stretch"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    <Style Selector="TextBox">
      <Setter Property="FontSize" Value="{DynamicResource EditorFontSize}"/>
      <Setter Property="HorizontalContentAlignment" Value="Left"/>
      <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    <Style Selector="compilerOutput|ErrorsView TextBlock">
      <Setter Property="TextAlignment" Value="Left"/>
    </Style>
  </UserControl.Styles>
  <TabControl Name="TerminalTabView" Padding="0" ClipToBounds="True">
    <TabItem Header="Terminal" ClipToBounds="True">
        <ScrollViewer Name="TerminalScrollViewer"
                      Background="{DynamicResource SystemChromeLowColor}"
                      Padding="6,6,6,0"
                      ClipToBounds="True"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch">
          <TextBox Name="TerminalTextBox"
                   AcceptsReturn="True"
                   FontFamily="Consolas,monospace"
                   Watermark="Terminal output will appear here..."
                   IsReadOnly="True"
                   TextWrapping="Wrap"
                   BorderThickness="0"
                   Background="Transparent"
                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                   Focusable="True"
                   IsTabStop="True"
                   Padding="0"
                   Margin="0"
                   MinHeight="0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Stretch">
            <TextBox.Styles>
              <!-- Override all TextBox states to have consistent simple styling -->
              <Style Selector="TextBox">
                <Setter Property="Background" Value="{DynamicResource SystemChromeLowColor}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
              </Style>
              <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                <Setter Property="Background" Value="{DynamicResource SystemChromeLowColor}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
              </Style>
              <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                <Setter Property="Background" Value="{DynamicResource SystemChromeLowColor}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
              </Style>
              <Style Selector="TextBox:focus">
                <Setter Property="Background" Value="{DynamicResource SystemChromeLowColor}"/>
              </Style>
              <Style Selector="TextBox:pointerover">
                <Setter Property="Background" Value="{DynamicResource SystemChromeLowColor}"/>
              </Style>
            </TextBox.Styles>
          </TextBox>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Lexical Errors">
        <compilerOutput:ErrorsView GroupsSource="{Binding Errors.LexicalGroups}" PanelTabIndex="1" />
      </TabItem>
      <TabItem Header="Syntax Errors">
        <compilerOutput:ErrorsView GroupsSource="{Binding Errors.SyntaxGroups}" PanelTabIndex="2" />
      </TabItem>
      <TabItem Header="Semantic Errors">
        <compilerOutput:ErrorsView GroupsSource="{Binding Errors.SemanticGroups}" PanelTabIndex="3" />
      </TabItem>
      <TabItem Header="Symbol Table">
        <compilerOutput:SymbolTableView DataContext="{Binding SymbolTable}" />
      </TabItem>
    </TabControl>
</UserControl>
