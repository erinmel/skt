<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:shell="using:skt.IDE.Views.Shell"
             x:Class="skt.IDE.Views.ToolWindows.Chrome.ToolWindowStrip">

    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,1,0,1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="3,5">
                <Button Name="FileExplorerToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="File Explorer">
                    <shell:SktIcon IconKey="Icon.ToolWindowExplorer" IconSize="20"/>
                </Button>

                <Button Name="TokensToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="Tokens View">
                    <shell:SktIcon IconKey="Icon.ToolWindowTokens" IconSize="20"/>
                </Button>

                <Button Name="SyntaxTreeToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="Syntax Tree">
                    <shell:SktIcon IconKey="Icon.ToolWindowSyntaxTree" IconSize="20"/>
                </Button>

                <Button Name="SemanticTreeToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="Semantic Tree">
                    <shell:SktIcon IconKey="Icon.ToolWindowSyntaxTree" IconSize="20"/>
                </Button>

                <Button Name="PhaseOutputToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="Phase Output">
                    <shell:SktIcon IconKey="Icon.ToolWindowIntermediateCode" IconSize="20"/>
                </Button>
            </StackPanel>

            <Grid Grid.Row="1" Margin="5,10"/>

            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="3,5">
                <Button Name="TerminalToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="Terminal">
                    <shell:SktIcon IconKey="Icon.PanelTerminal" IconSize="20"/>
                </Button>

                <Button Name="OutputToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="Lexical Errors">
                    <shell:SktIcon IconKey="Icon.PanelOutput" IconSize="20"/>
                </Button>

                <Button Name="ErrorsToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="Syntax Errors">
                    <shell:SktIcon IconKey="Icon.PanelErrors" IconSize="20"/>
                </Button>

                <Button Name="BuildToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="6,6"
                        Margin="0,3"
                        ToolTip.Tip="Build">
                    <shell:SktIcon IconKey="Icon.PanelBuild" IconSize="20"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
