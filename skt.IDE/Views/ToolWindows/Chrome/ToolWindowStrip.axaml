<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:shell="using:skt.IDE.Views.Shell"
             x:Class="skt.IDE.Views.ToolWindows.Chrome.ToolWindowStrip">

    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,1,0,1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="3,5">
                <Button Name="FileExplorerToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="File Explorer">
                    <shell:SktIcon IconKey="Icon.ToolWindowExplorer" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>

                <Button Name="TokensToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="Tokenization">
                    <shell:SktIcon IconKey="Icon.Tokenization" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>

                <Button Name="SyntaxTreeToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="Syntax Tree">
                    <shell:SktIcon IconKey="Icon.Syntax" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>

                <Button Name="SemanticTreeToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="Semantic Tree">
                    <shell:SktIcon IconKey="Icon.Semantic" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>

                <Button Name="PCodeToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="P-Code">
                    <shell:SktIcon IconKey="Icon.PCode" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>
            </StackPanel>

            <Grid Grid.Row="1" Margin="5,10"/>

            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="3,5">
                <Button Name="TerminalToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="Terminal">
                    <shell:SktIcon IconKey="Icon.PanelTerminal" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>

                <Button Name="TokenErrorsToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="Tokenization Errors">
                    <shell:SktIcon Name="TokenErrorsIcon" IconKey="Icon.TokenizationErrors" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>

                <Button Name="SyntaxErrorsToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="Syntax Errors">
                    <shell:SktIcon Name="SyntaxErrorsIcon" IconKey="Icon.SyntaxErrors" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>

                <Button Name="SemanticErrorsToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="Semantic Errors">
                    <shell:SktIcon Name="SemanticErrorsIcon" IconKey="Icon.SemanticErrors" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>

                <Button Name="SymbolTablePanelToggle"
                        Tag="ToolIcon"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="{DynamicResource ButtonPaddingCompact}"
                        Margin="0,3"
                        ToolTip.Tip="Symbol Table">
                    <shell:SktIcon IconKey="Icon.SymbolTable" IconSize="{DynamicResource IconSizeToolbar}"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
