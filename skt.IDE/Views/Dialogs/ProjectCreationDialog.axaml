<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="skt.IDE.Views.Dialogs.ProjectCreationDialog"
        Classes="skt-dialog"
        Title="Create New Project"
        Width="520"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="BorderOnly">
  <Window.Styles>
    <Style Selector="TextBlock#WarningText">
      <Setter Property="Foreground" Value="Red"/>
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
  </Window.Styles>
  <Border Classes="surface">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,* ,Auto" ColumnSpacing="8" RowSpacing="10">
      <TextBlock Grid.Row="0" Grid.Column="0" Text="Base Path" VerticalAlignment="Center"/>
      <TextBox Grid.Row="0" Grid.Column="1" Name="BasePathTextBox"/>
      <Button Grid.Row="0" Grid.Column="2" Name="BrowseButton">Browse...</Button>

      <TextBlock Grid.Row="1" Grid.Column="0" Text="Project Name" VerticalAlignment="Center"/>
      <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Name="ProjectNameTextBox"/>

      <TextBlock Grid.Row="2" Grid.Column="0" Text="Final Path" VerticalAlignment="Center"/>
      <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Name="FinalPathText" TextWrapping="Wrap"/>

      <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Name="WarningText"/>

      <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
        <Button Name="CancelButton" IsCancel="True">Cancel</Button>
        <Button Name="CreateButton" IsDefault="True">Create</Button>
      </StackPanel>
    </Grid>
  </Border>
</Window>
