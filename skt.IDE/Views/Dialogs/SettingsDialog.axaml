<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="skt.IDE.Views.Dialogs.SettingsDialog"
        Classes="skt-dialog"
        Title="Settings"
        SizeToContent="WidthAndHeight"
        MinWidth="480"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="BorderOnly">
  <Border Classes="surface" Padding="16">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" ColumnSpacing="12" RowSpacing="12">
      
      <!-- Theme Selection -->
      <TextBlock Grid.Row="0" Grid.Column="0" Text="Theme:" VerticalAlignment="Center"/>
      <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
        <ComboBox x:Name="ThemeCombo" MinWidth="140" HorizontalAlignment="Left">
          <ComboBoxItem Content="Dark" />
          <ComboBoxItem Content="Light" />
        </ComboBox>
        <Button Content="Apply Theme" x:Name="ApplyThemeButton" Padding="{DynamicResource ButtonPaddingCompact}"/>
      </StackPanel>

      <!-- App Font Size -->
      <TextBlock Grid.Row="1" Grid.Column="0" Text="App Font Size:" VerticalAlignment="Center"/>
      <ComboBox Grid.Row="1" Grid.Column="1" x:Name="AppFontSizeCombo" MinWidth="140" HorizontalAlignment="Left"/>

      <!-- Editor Font Size -->
      <TextBlock Grid.Row="2" Grid.Column="0" Text="Editor Font Size:" VerticalAlignment="Center"/>
      <ComboBox Grid.Row="2" Grid.Column="1" x:Name="EditorFontSizeCombo" MinWidth="140" HorizontalAlignment="Left"/>

      <!-- Help Text -->
      <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                 Text="Font sizes will be applied when you click OK. Changes are saved automatically."
                 TextWrapping="Wrap"
                 Opacity="0.7"
                 FontSize="{DynamicResource AppFontSizeSmall}"
                 Margin="0,4,0,0"/>

      <!-- Action Buttons -->
      <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right" 
                  Spacing="12"
                  Margin="0,8,0,0">
        <Button Content="OK" x:Name="OkButton" IsDefault="True" MinWidth="88"/>
        <Button Content="Cancel" x:Name="CancelButton" IsCancel="True" MinWidth="88"/>
      </StackPanel>
    </Grid>
  </Border>
</Window>
