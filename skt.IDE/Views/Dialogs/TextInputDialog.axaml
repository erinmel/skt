<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="skt.IDE.Views.Dialogs.TextInputDialog"
        Classes="skt-dialog"
        SizeToContent="Height"
        Width="400"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Input"
        SystemDecorations="BorderOnly">
  <Border Classes="surface" Padding="16">
    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
      <TextBlock x:Name="MessageText" Grid.Row="0" TextWrapping="Wrap"/>
      <TextBox x:Name="InputBox" Grid.Row="1"/>
      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,8,0,0">
        <Button x:Name="OkButton" IsDefault="True" MinWidth="88">OK</Button>
        <Button x:Name="CancelButton" IsCancel="True" MinWidth="88">Cancel</Button>
      </StackPanel>
    </Grid>
  </Border>
</Window>
