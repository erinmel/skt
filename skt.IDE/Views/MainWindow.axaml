<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:skt.IDE.ViewModels"
        xmlns:texteditorviews="using:skt.IDE.Views.TextEditor"
        xmlns:toolviews="using:skt.IDE.Views.ToolWindows"
        x:Class="skt.IDE.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="avares://skt.IDE/Assets/SKT.ico"
        Title="SKT IDE"
        Width="1200"
        Height="800"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        SystemDecorations="BorderOnly"
        >

    <Window.Styles>
        <Style Selector="DropDownButton PathIcon">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>


    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <!-- Toolbar (this includes your custom window controls) -->
            <RowDefinition Height="40"/>
            <!-- Main content area -->
            <RowDefinition Height="7*"/>
            <!-- Terminal/Errors -->
            <RowDefinition Height="0*" MinHeight="0"/>
            <!-- Status bar -->
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Text Editor -->
            <ColumnDefinition Width="5*"/>
            <!-- Tools (File Explorer) -->
            <ColumnDefinition Width="3*"/>
            <!-- Tool Window (Very narrow, fixed width) -->
            <ColumnDefinition Width="45" MinWidth="45" MaxWidth="45"/>
        </Grid.ColumnDefinitions>

        <!-- Custom Toolbar with Window Controls -->
        <toolviews:Toolbar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="MainToolbar" />

        <!-- Main Content Area -->
        <Border Grid.Row="1" Grid.Column="0" Margin="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="0">
                    <texteditorviews:TabbedEditor Name="TabbedEditorControl" DataContext="{Binding TabbedEditorViewModel}"/>
                </Border>
            </Grid>
        </Border>

        <!-- Tools/Tool Window Content (Dynamic content based on selected tool) -->
        <Border Grid.Row="1" Grid.Column="1" Margin="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="5" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedToolWindowTitle}" FontWeight="Bold"/>
                </Border>

                <!-- Dynamic content based on selected tool window -->
                <Grid Grid.Row="1">
                    <!-- File Explorer (default) -->
                    <toolviews:FileExplorerView Name="FileExplorerContent" DataContext="{Binding FileExplorer}"/>

                    <!-- Tokens View -->
                    <ScrollViewer Name="TokensContent" IsVisible="False">
                        <TextBlock Text="{Binding TokensOutput}"
                                  FontFamily="Consolas,monospace"
                                  Padding="10"/>
                    </ScrollViewer>

                    <!-- Syntax Tree View -->
                    <ScrollViewer Name="SyntaxTreeContent" IsVisible="False">
                        <TextBlock Text="{Binding SyntaxTreeOutput}"
                                  FontFamily="Consolas,monospace"
                                  Padding="10"/>
                    </ScrollViewer>

                    <!-- Phase Output View -->
                    <toolviews:PhaseOutputView Name="PhaseOutputContent" DataContext="{Binding PhaseOutput}" IsVisible="False"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Tool Window (Toggle Buttons) -->
        <Border
            Grid.Row="1"
            Grid.Column="2"
            Grid.RowSpan="2"
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,1,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Section - Tool Window Toggles -->
                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="3,5">
                    <Button Name="FileExplorerToggle"
                            Tag="ToolIcon"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6,6"
                            Margin="0,3"
                            ToolTip.Tip="File Explorer"
                            Click="ToolWindowToggle_Click">
                        <Image Source="{DynamicResource Icon.ToolWindowExplorer}" Width="20" Height="20"/>
                    </Button>

                    <Button Name="TokensToggle"
                            Tag="ToolIcon"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6,6"
                            Margin="0,3"
                            ToolTip.Tip="Tokens View"
                            Click="ToolWindowToggle_Click">
                        <Image Source="{DynamicResource Icon.ToolWindowTokens}" Width="20" Height="20"/>
                    </Button>

                    <Button Name="SyntaxTreeToggle"
                            Tag="ToolIcon"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6,6"
                            Margin="0,3"
                            ToolTip.Tip="Syntax Tree"
                            Click="ToolWindowToggle_Click">
                        <Image Source="{DynamicResource Icon.ToolWindowSyntaxTree}" Width="20" Height="20"/>
                    </Button>

                    <Button Name="PhaseOutputToggle"
                            Tag="ToolIcon"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6,6"
                            Margin="0,3"
                            ToolTip.Tip="Phase Output"
                            Click="ToolWindowToggle_Click">
                        <Image Source="{DynamicResource Icon.ToolWindowIntermediateCode}" Width="20" Height="20"/>
                    </Button>
                </StackPanel>

                <!-- Flexible Spacer with a thin divider centered -->
                <Grid Grid.Row="1" Margin="5,10"/>

                <!-- Bottom Section - Terminal Panel Toggles -->
                <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="3,5">
                    <Button Name="TerminalToggle"
                            Tag="ToolIcon"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6,6"
                            Margin="0,3"
                            ToolTip.Tip="Terminal"
                            Click="ToolPanelToggle_Click">
                        <Image Source="{DynamicResource Icon.PanelTerminal}" Width="20" Height="20"/>
                    </Button>

                    <Button Name="OutputToggle"
                            Tag="ToolIcon"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6,6"
                            Margin="0,3"
                            ToolTip.Tip="Output"
                            Click="ToolPanelToggle_Click">
                        <Image Source="{DynamicResource Icon.PanelOutput}" Width="20" Height="20"/>
                    </Button>

                    <Button Name="ErrorsToggle"
                            Tag="ToolIcon"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6,6"
                            Margin="0,3"
                            ToolTip.Tip="Errors"
                            Click="ToolPanelToggle_Click">
                        <Image Source="{DynamicResource Icon.PanelErrors}" Width="20" Height="20"/>
                    </Button>

                    <Button Name="BuildToggle"
                            Tag="ToolIcon"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="6,6"
                            Margin="0,3"
                            ToolTip.Tip="Build"
                            Click="ToolPanelToggle_Click">
                        <Image Source="{DynamicResource Icon.PanelBuild}" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Terminal/Errors -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="5">
                    <TextBlock Text="Terminal &amp; Errors" FontWeight="Bold"/>
                </Border>

                <TabControl Grid.Row="1" Name="TerminalTabView">
                    <TabItem Header="Terminal">
                        <ScrollViewer>
                            <TextBox AcceptsReturn="True"
                                     FontFamily="Consolas,monospace"
                                     Watermark="Terminal output will appear here..."
                                     IsReadOnly="True"/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Lexical Errors">
                        <ScrollViewer>
                            <TextBox AcceptsReturn="True"
                                     FontFamily="Consolas,monospace"
                                     Text="{Binding LexicalErrors}"
                                     IsReadOnly="True"/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Syntax Errors">
                        <ScrollViewer>
                            <TextBox AcceptsReturn="True"
                                     FontFamily="Consolas,monospace"
                                     Text="{Binding SyntaxErrors}"
                                     IsReadOnly="True"/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Other Errors">
                        <ScrollViewer>
                            <TextBox AcceptsReturn="True"
                                     FontFamily="Consolas,monospace"
                                     Text="{Binding OtherErrors}"
                                     IsReadOnly="True"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <toolviews:StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"/>

        <!-- Splitters -->
        <GridSplitter Grid.Row="1" Grid.Column="1"
                     Width="2"
                     HorizontalAlignment="Left"
                     ResizeDirection="Columns"
                     Margin="0"
                     Padding="0"/>

        <!-- Horizontal splitter between main area and terminal -->
        <GridSplitter Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                     Height="2"
                     VerticalAlignment="Top"
                     ResizeDirection="Rows"
                     Margin="0"
                     Padding="0"/>
    </Grid>
</Window>
